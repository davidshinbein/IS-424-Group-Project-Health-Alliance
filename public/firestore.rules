
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Events: public read, only admins can write
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins collection: authenticated users can read, only they can write their own
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == adminId;
    }

    // Leaders collection: SAME RULES AS EVENTS - public read, only admins can write
    match /leaders/{leaderId} {
      allow read: if true;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}