rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read events for the public calendar.
    match /events/{eventId} {
      allow read: if true;
      // writes should be restricted to authenticated users in production
      allow write: if false;
    }

    // Admins collection: allow reads by authenticated users and writes only by that user
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == adminId;
    }

    // Leaders collection: public read, writes allowed by the owner (uid == doc id) or by admins
    match /leaders/{leaderId} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.uid == leaderId ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}