rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read events for the public calendar.
    match /events/{eventId} {
      allow read: if true;
      // writes should be restricted to authenticated users in production
      allow write: if false;
    }

    // Admins collection: allow reads by authenticated users and writes only by that user
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == adminId;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}