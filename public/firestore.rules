
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Events: public read, only admins can write
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins collection: authenticated users can read their own, only they can write their own
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == adminId;
    }

    // Leaders collection: public read, authenticated writes
    // Users can write to their own profile (where doc ID = their UID)
    // OR if they're listed as an admin
    match /leaders/{leaderId} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.uid == leaderId ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}